<Window x:Class="Animatron.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid x:Name="grid">
        <Canvas x:Name="canvas"/>
        <Rectangle x:Name="focus" Fill="Black" Opacity="0.1" Margin="20,20"/>
        <Button x:Name="btnRecord" Width="100" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom">Start Recording</Button>
        <TextBox x:Name="txtPath" VerticalAlignment="Bottom" Margin="0,0,110,0" Text="Path"/>
    </Grid>
</Window>
