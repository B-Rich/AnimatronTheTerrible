<Window x:Class="Animatron.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="489" Width="741">
    <Grid x:Name="grid">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Canvas x:Name="canvas" Background="White"/>
        <Rectangle Grid.Row="1" Fill="DarkGray"/>
        <Button Grid.Row="1" x:Name="btnRecord" Width="100" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom">Start Recording</Button>
        <TextBox Grid.Row="1" x:Name="txtPath" VerticalAlignment="Bottom" Margin="0,0,110,0" Text="Path"/>
    </Grid>
</Window>
